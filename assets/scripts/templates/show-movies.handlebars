{{#each movies as |movie|}}

      <div class="list col-xs-12">
          {{#if movie.watched}}
          <div class="movie">
            <h5 data-id="{{movie.id}}" class="watched">{{movie.genres}}: {{movie.title}}</h5>
            <hr class="notes hide">
            <p class="notes hide"> Notes: {{movie.notes}} </p>
          </div>
          <form id="{{id}}" class="hide addNotesForm">
            <input name="movie[notes]" class="form-inline notes-form-element" type="text" placeholder="Notes">
            <button type="submit" class="btn btn-default notes-form-element">Add</button>
          </form>
          <div id="{{id}}" class="remove-button">X</div>
          <div id="{{id}}" class="watched check-button">O</div>
          {{else}}
          <div class="movie">
            <h5 data-id="{{movie.id}}" class="">{{movie.genres}}: {{movie.title}}</h5>
            <hr class="notes hide">
            <p class="notes hide">Notes: {{movie.notes}} </p>
          </div>
          <form id="{{id}}" class="hide addNotesForm">
            <input name="movie[notes]" class="form-inline notes-form-element" type="text" placeholder="Notes">
            <button class="btn btn-default notes-form-element">Add</button>
          </form>
          <div id="{{id}}" class="remove-button">X</div>
          <div id="{{id}}" class="check-button">O</div>
          {{/if}}
      </div>

{{/each}}
